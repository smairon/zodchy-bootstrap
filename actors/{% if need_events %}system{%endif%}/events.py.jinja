async def event_keeper(
    events: collections.abc.Iterable[codex.Event],
    client: specs.contracts.WriteClientContract,
):
    data = []
    for event in events:
        for _type in type(event).__mro__:
            if executor := context_extractor_registry.get(_type):
                data.append(
                    hermitage.Row(
                        id=uuid.uuid4(),
                        name=_type.__name__,
                        **executor(event)
                    )
                )
    if data:
        invoice = specs.contracts.WriteInvoice(
            schema.event.name,
            *data
        )
        await client(invoice)
